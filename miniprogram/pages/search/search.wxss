.search {
  padding: 0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}

.searchbox {
  padding: 30rpx 0;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

.tui-search-input {
  width: 100%;
  height: 66rpx;
  border-radius: 35rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #f2f2f2;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: nowrap;
}

.tui-input {
  flex: 1;
  color: #333;
  padding: 0 16rpx;
  font-size: 28rpx;
}

.tui-input-plholder {
  font-size: 28rpx;
  color: #b2b2b2;
}

.tui-cancle {
  color: #888;
  font-size: 28rpx;
  padding-left: 30rpx;
  flex-shrink: 0;
}

.tui-history-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}

.tui-icon-delete {
  padding: 10rpx;
}

.tui-search-title {
  font-size: 28rpx;
  font-weight: bold;
}

.tui-hot-header {
  padding: 30rpx 0;
}

.tui-tag-class {
  display: inline-block;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  font-size: 26rpx !important;
}

.tag {
  display: inline-block;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  padding: 16rpx 26rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  border-radius: 50rpx;
  background: #ededed !important
}

.voice {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(66, 66, 66, 0.3);
  display: flex;
  justify-content: center;
}

.icon-show {
  font-size: 130rpx;
  color: #fff;
}

.icon-body {
  position: absolute;
  bottom: 120rpx;
  width: 200rpx;
  height: 200rpx;
  background: var(--indexL);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
}